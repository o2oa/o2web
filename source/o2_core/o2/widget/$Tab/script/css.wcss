	    "margin-top": "3px",
	    "border": "1px solid #eeeeee",
	    "margin-right": "3px",
	    "float": "right",
	    "background": "url("+o2.session.path+"/widget/$Tab/script/down.png) center center no-repeat",
        "cursor": "pointer"
	},
	"tabNodeContainerRight_over": {
	    "border": "1px solid #cccccc",
