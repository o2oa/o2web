{
	"tabNodeContainer": {
		"height": "30px",
		"overflow": "hidden",
		"background": "#eeeeee",
		"border-top": "1px solid #CCC",
		"border-bottom": "1px solid #CCC"
	},
	"contentNodeContainer": {
		"overflow": "hidden"
	},
	"contentNodeArea": {
		"overflow": "hidden",
		"display": "none",
		"opacity": 0
	},
	"tabNode": {
		"position": "static",
		"margin-left": "0px",
		"margin-right": "-1px",
		"margin-top": "1px",
		"float": "left",
		"height": "28px",
		"cursor": "pointer",
		"background": "url("+o2.session.path+"/widget/$Tab/script/tabAreaBg.gif) center center",

		"border": "1px solid #CCC",
		"border-bottom": "0px"
