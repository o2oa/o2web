	"tabTextNode": {
		"font-size": "12px",
		"line-height": "28px",
		"text-align": "center",
		"color": "#333333",
		"margin-right": "8px",
		"margin-top": "0px",
		"font-weight": "bold",
		"margin-left": "8px",
		"display": "inline"
	},
	"tabCloseNode": {
		"height": "28px",
		"width": "16px",
		"background": "url("+o2.session.path+"/widget/$Tab/script/close_gray.png) left center",
		"background-repeat": "no-repeat" ,
		"float": "right"
	},
	"tabNodeCurrent": {
		"position": "static",
		"margin-left": "0px",
		"margin-right": "-1px",
		"margin-top": "1px",
		"float": "left",
		"height": "29px",
		"background": "#FFF",
		
		"border": "1px solid #CCC",
		"border-bottom": "0px solid #CCC"
	},
	"tabTextNodeCurrent": {
		"font-size": "12px",
		"line-height": "29px",
		"text-align": "center",
		"color": "#bf6364",
